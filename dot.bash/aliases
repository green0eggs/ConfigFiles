# use with care, not to everybody's taste
alias v='vim'
alias g='gvim'
alias e='evince'    # kpdf is unreasonably ugly
alias r='root -l'   # never want the splash screen
alias p='python'
alias m='make 2>&1 | tee make.stdout'
alias mj='make -j 2>&1 | tee make.stdout'
alias M='make clean; make -j 2>&1 | tee make.stdout'
alias ipy='ipython' # ip conflicts with an actual bash prog
alias ipy3='ipython3 --profile=py3' # ipython 3

# open common filetypes with one command
o () {
  if [ -f $1 ] ; then
    case $1 in
      *.pdf)   evince $1  ;;
      *.eps)   evince $1  ;;
      *.ps)    evince $1  ;;
      *.png)   display $1 ;;
      *.jpg)   display $1 ;;
      *.jpeg)   display $1 ;;
      *.root)  root -l $1 ;;
    esac
  else
    echo "'$1' is not a valid file!"
  fi
}



