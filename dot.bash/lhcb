# open images of the lhcb detector
alias detector='display $HOME/LHCb/Images/DetectorDiagrams/3d_new.png &
                display $HOME/LHCb/Images/DetectorDiagrams/xsec.jpg &'

# open detector jinst paper
alias bible='evince $HOME/LHCb/thebible.pdf &'

